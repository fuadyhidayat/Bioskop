<div class="p-4" style="background-color: yellow; text-align: right;">
    @if (TampilkanButtonSave)
    {
        <button class="btn btn-primary ms-3">Save as Draft</button>
    }

    @if (TampilkanButtonEdit)
    {
        <button class="btn btn-secondary ms-3">Edit</button>
    }

    @if (TampilkanButtonSend)
    {
        <button class="btn btn-dark ms-3">Send</button>
    }
</div>

@code {
    [Parameter]
    public bool TampilkanButtonSave { get; set; } = true;

    [Parameter]
    public bool TampilkanButtonEdit { get; set; } = true;

    [Parameter]
    public bool TampilkanButtonSend { get; set; } = true;
}
